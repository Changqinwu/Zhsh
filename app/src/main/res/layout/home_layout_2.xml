<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFF"
                android:orientation="vertical">


    <RelativeLayout
        android:layout_marginTop="10dp"
        android:id="@+id/re_gridview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       >

        <android.support.v7.widget.RecyclerView
            android:id="@+id/home_gridview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </RelativeLayout>

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/tv_line1"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/re_gridview"
        android:background="@color/line"
        />


    <RelativeLayout
        android:id="@+id/re_fxjc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_line1"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        >

        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/fxjc"
            android:layout_width="5dp"
            android:layout_height="wrap_content"
            android:background="#6d9"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textSize="@dimen/home_fragment_icon_textsize"
            android:layout_toRightOf="@+id/fxjc"
            android:text="发现精彩"
            />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_line2"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@+id/re_fxjc"
        android:background="@color/line"
        />


</RelativeLayout>