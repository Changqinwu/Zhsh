<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <com.qiming.wcq.mymapdemo.customview.DrawableCenterRadioButton
            android:id="@+id/ra_jd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:textColor="@color/btn_jq_text_color"
            android:text="酒店" />

        <View
            android:layout_width="0.1dp"
            android:layout_height="20dp"
            android:background="@color/qt_text_clor_normal"
            />

        <com.qiming.wcq.mymapdemo.customview.DrawableCenterRadioButton
            android:id="@+id/ra_wsj"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:background="@null"
            android:textColor="@color/btn_fw_text_color"
            android:text="全景购物" />

        <View
            android:layout_width="0.1dp"
            android:layout_height="20dp"
            android:background="@color/qt_text_clor_normal"
            />

        <com.qiming.wcq.mymapdemo.customview.DrawableCenterRadioButton
            android:id="@+id/ra_park"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@null"
            android:text="停车场"
            android:gravity="center"
            android:textColor="@color/btn_cs_text_color"
            android:layout_weight="1" />

        <View
            android:layout_width="0.1dp"
            android:layout_height="20dp"
            android:background="@color/qt_text_clor_normal"
            />


        <com.qiming.wcq.mymapdemo.customview.DrawableCenterRadioButton
            android:id="@+id/ra_jgdw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@null"
            android:gravity="center"
            android:textColor="@color/btn_qt_text_color"
            android:text="机关单位"
            android:layout_weight="1" />
    </RadioGroup>

</RelativeLayout>