<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        >

        <com.qiming.wcq.mymapdemo.customview.CustomShapeImageView
            android:id="@+id/ima_icon"
            android:layout_width="@dimen/home_fragment_icon_width"
            android:layout_height="@dimen/home_fragment_icon_height"
            android:layout_centerHorizontal="true"
            app:onlyDrawBorder="false"
            android:src="@mipmap/ic_launcher"
            app:roundRadius="8dp"
            app:shape="rectangle"/>

        <TextView
            android:id="@+id/tv_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ima_icon"
            android:layout_marginTop="8dp"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/home_fragment_icon_textsize"/>
    </RelativeLayout>
</RelativeLayout>